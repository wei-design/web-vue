{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker"],
    "paths": {
      "wei_design": ["../packages/index.ts"],
      "~/*": ["./.vitepress/vitepress/*"]
    },
    "types": ["../typings/components"],
    "jsx": "preserve"
  },
  "include": ["**/*", ".vitepress/**/*", "env.d.ts"],
  "exclude": ["node_modules"]
}
