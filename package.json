{
    "name": "@wei_design/web-vue",
    "private": false,
    "packageManager": "pnpm@7.6.0",
    "version": "1.0.0",
    "author": "wforguo@qq.com",
    "description": "Wei Design - A Vue.js 3 UI library, @wei_design/web-vue",
    "license": "ISC",
    "keywords": [
        "@wei_design/web-vue",
        "wei_design",
        "wei design",
        "vue",
        "vue3",
        "vite",
        "vite3",
        "Vue.js 3 UI library",
        "Wei Design - A Vue.js 3 UI library",
        "javascript"
    ],
    "scripts": {
        "cz": "git-cz",
        "start": "npm run dev",
        "dev": "vite",
        "lib:build": "vue-tsc --noEmit && vite build",
        "docs:dev": "npm run -C docs dev",
        "docs:build": "npm run -C docs build",
        "preview": "vite preview",
        "clean:lib": "rimraf lib",
        "clean:modules": "rimraf node_modules",
        "prepare": "husky install",
        "lint": "eslint --ext .vue,.js,.jsx,.ts,.tsx  --ignore-path .gitignore --fix packages",
        "format": "prettier .  --write",
        "release": "standard-version",
        "release:alpha": "standard-version --prerelease alpha",
        "release:rc": "standard-version --prerelease rc",
        "release:major": "npm run release -- --release-as major",
        "release:minor": "npm run release -- --release-as minor",
        "release:patch": "npm run release -- --release-as patch"
    },
    "homepage": "https://wei-design.github.io/web-vue/",
    "repository": {
        "type": "git",
        "url": "https://github.com/wei-design/web-vue.git"
    },
    "files": [
        "lib/*",
        "packages/*",
        "Readme.md",
        "package.json"
    ],
    "main": "./lib/web-vue.umd.js",
    "module": "./lib/web-vue.mjs",
    "exports": {
        ".": {
            "import": "./lib/web-vue.mjs",
            "require": "./lib/web-vue.umd.js"
        },
        "./lib/style.css": "./lib/style.css"
    },
    "peerDependencies": {
        "vue": "^3.2.33"
    },
    "dependencies": {
        "dayjs": "^1.11.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@types/node": "^18.0.0",
        "@types/sass": "^1.43.1",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vitejs/plugin-vue": "^3.0.3",
        "@vitejs/plugin-vue-jsx": "^2.0.0",
        "chalk": "^4.1.2",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-define-config": "^1.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^9.1.0",
        "husky": "^8.0.1",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "sass": "^1.49.7",
        "standard-version": "^9.5.0",
        "typescript": "^4.7.2",
        "vite": "^3.0.9",
        "vite-plugin-dts": "^1.2.0",
        "vite-plugin-md": "^0.15.0",
        "vite-plugin-meta-env": "^1.0.0",
        "vue": "^3.2.33",
        "vue-tsc": "^0.40.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
